00002Br 2               ; Arithmetic right shift
00002Br 2               ; A >>= c
00002Br 2               ; @PARAM	c: default=1
00002Br 2               ;
00002Br 2               ; To ASR a memory location
00002Br 2               ; (From http://wiki.nesdev.com/w/index.php/Synthetic_instructions#Arithmetic_shift_right)
00002Br 2               ; 	lda addr		; Copy memory into A
