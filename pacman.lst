000170r 2               ;*------------------------------------------------------------------------------
000170r 2               ; Arithmetic left shift
000170r 2               ;! Deprecated (Not shortened)
000170r 2               ; A >>= c
000170r 2               ; @PARAM	c: default=1
000170r 2               ;*------------------------------------------------------------------------------
000170r 2               
000170r 2               .code									; ----- code -----
000170r 2               
000170r 2               .macro ashl c
000170r 2               		cmp #%1000_0000
000170r 2               		php								; Save carry
000170r 2               		.if (.blank(c))
000170r 2               			; ashl
000170r 2               			shl #2
000170r 2               		.elseif (.match(.left(1, {c}), #))
000170r 2               			; ashl #4
000170r 2               			shl #((.right(.tcount ({c})-1, {c})) + 1)
000170r 2               		.else
000170r 2               			.error "Arg \"c\" in macro ashl is wrong."
000170r 2               		.endif
000170r 2               		plp
000170r 2               		ror								; a /= 2, carry into bit7
