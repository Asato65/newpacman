000174r 2               .code									; ----- code -----
000174r 2               
000174r 2               .macro shl c
000174r 2               		.if (.blank(c))
000174r 2               			asl
000174r 2               		.elseif (.match(.left(1, {c}), #))
000174r 2               			.repeat	(.right(.tcount ({c})-1, {c}))
000174r 2               				asl
000174r 2               			.endrepeat
