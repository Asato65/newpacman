00002Br 2               .macro sub arg1, arg2
00002Br 2               		.if (.paramcount = 1)
00002Br 2               			sec
00002Br 2               			sbc arg1
00002Br 2               		.elseif (.paramcount = 2 && .match({arg1}, a))
00002Br 2               			sec
00002Br 2               			sbc arg2
00002Br 2               		.elseif (.paramcount = 2 && .match({arg1}, x))
00002Br 2               			.if (\
00002Br 2               				.match(.left(1, {arg2}), #) &&\
00002Br 2               				.right(.tcount({arg2})-1, {arg2}) <= 7\
00002Br 2               			)
00002Br 2               				.repeat (.right(.tcount({arg2})-1, {arg2}))
00002Br 2               					dex
00002Br 2               				.endrepeat
00002Br 2               			.else
00002Br 2               				pha
00002Br 2               				txa
00002Br 2               				sec
00002Br 2               				sbc arg2
00002Br 2               				tax
00002Br 2               				pla
00002Br 2               			.endif
00002Br 2               		.elseif (.paramcount = 2 && .match({arg1}, y))
00002Br 2               			.if (\
00002Br 2               				.match(.left(1, {arg2}), #) &&\
00002Br 2               				.right(.tcount({arg2})-1, {arg2}) <= 7\
00002Br 2               			)
00002Br 2               				.repeat (.right(.tcount ({arg2})-1, {arg2}))
00002Br 2               					dey
00002Br 2               				.endrepeat
00002Br 2               			.else
00002Br 2               				pha
00002Br 2               				tya
00002Br 2               				sec
00002Br 2               				sbc arg2
00002Br 2               				tay
00002Br 2               				pla
00002Br 2               			.endif
00002Br 2               		.else
