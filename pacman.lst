0000CCr 2               ; memo
0000CCr 2               ; ----- PPU buff data structure -----
0000CCr 2               ; r: Direction
0000CCr 2               ; 	Bit0 is a flag, others are 1.
0000CCr 2               ; 	-> 0b1111_111[0/1]
0000CCr 2               ; 	-> 0xFE（Horizontal）/0xFF（Vertical）
0000CCr 2               ; a: Addr
0000CCr 2               ; d: Data
0000CCr 2               ; r [a a] [d d d ... d] r [a a] [d d ... d]
0000CCr 2               
0000CCr 2               
0000CCr 2               ;*------------------------------------------------------------------------------
0000CCr 2               ; NMI (Interrupt)
0000CCr 2               ; @BREAK X Y (When end main process.)
0000CCr 2               ; To shorten the clock, put the buffer data on the stack
0000CCr 2               ; 	(Shorten clock by buff data length)
0000CCr 2               ; 	pla -> 3 clc
0000CCr 2               ; 	lda ZP/ABSORUTE, x -> 4 clc
0000CCr 2               ;*------------------------------------------------------------------------------
0000CCr 2               
0000CCr 2               .proc NMI
0000CCr 2  48           		pha								; If main processing has not finished, tmp_rgstA may be in use
0000CDr 2  E6 rr        		inc nmi_cnt
0000CFr 2  A5 rr        		lda is_processing_main
0000D1r 2  F0 02        		beq @NMI_MAIN
0000D3r 2  68           		pla
0000D4r 2  40           		rti	; --------------------------
0000D5r 2               
0000D5r 2               @NMI_MAIN:
0000D5r 2  C5 rr        		cmp bg_buff_pointer				; A = 0
0000D7r 2  F0 35        		beq @STORE_CHR
0000D9r 2  AA           		tax
0000DAr 2  BD 00 01     		lda BG_BUFF, x
0000DDr 2               @SET_MODE:
0000DDr 2  29 01        		and #%00000001					; Get flag
0000DFr 2  0A 0A        		shl #2							; Move flag to Bit2
0000E1r 2  85 rr        		sta tmp1						; Start using tmp1
0000E3r 2  A5 rr        		lda ppu_ctrl1_cpy
0000E5r 2  29 FB        		and #%11111011					; Mask direction flag
0000E7r 2  05 rr        		ora tmp1						; End using tmp1
0000E9r 2  85 rr        		sta ppu_ctrl1_cpy
0000EBr 2  8D 00 20     		sta PPU_CTRL1					; Not use restorePPUSet()
0000EEr 2               @SET_ADDR:
0000EEr 2  E8           		inx								; Not do inx when go to @EXIT
0000EFr 2  BD 00 01     		lda BG_BUFF, x
0000F2r 2  8D 06 20     		sta PPU_ADDR
0000F5r 2  E8           		inx
0000F6r 2  BD 00 01     		lda BG_BUFF, x
0000F9r 2  8D 06 20     		sta PPU_ADDR
0000FCr 2  E8           		inx
0000FDr 2               @STORE_DATA:
0000FDr 2  BD 00 01     		lda BG_BUFF, x
000100r 2  A8           		tay
000101r 2  C9 FE        		cmp #$fe
000103r 2  B0 D8        		bcs @SET_MODE					; no inx
000105r 2  98           		tya
000106r 2  8D 07 20     		sta PPU_DATA
000109r 2  E8           		inx
00010Ar 2  E4 rr        		cpx bg_buff_pointer
00010Cr 2  D0 EF        		bne @STORE_DATA
00010Er 2               
00010Er 2               		; @SET_MODE + @SET_ADDR = 51 cycle
00010Er 2               		; @STORE_DATA (return @STORE_DATA) = 24 cycle
00010Er 2               		; @STORE_DATA (return @SET_MODE) = 13 cycle
00010Er 2               
00010Er 2               		; str1 = "A  B"
00010Er 2               		; 	=> 51 + space_len * 24 cycle
00010Er 2               		; 	=> mode(1) + addr(2) + data(2 + space_len) = (5 + space_len) bytes
00010Er 2               		; 	|  len  || 1  | 2  |  3  |  4  |
00010Er 2               		; 	| cycle || 75 | 99 | 123 | 147 |
00010Er 2               		;	| bytes || 6  | 7  |  8  |  9  |
00010Er 2               		; str2 = 'A', str3 = 'B'
00010Er 2               		; 	=> (51 + 13) * 2 = 64 * 2 = 128 cycle
00010Er 2               		; 	=> (mode(1) + addr(2) + data(1)) * 2 = 8 bytes
00010Er 2               		; space length:
00010Er 2               		; 	1: 75 cycle,	6 bytes (str1)
00010Er 2               		; 	2: 99 cycle,	7 bytes
00010Er 2               		; 	3: 123 cycle,	8 bytes
00010Er 2               		; 	4~: 128 cycle,	8 bytes (str2)
00010Er 2               @STORE_CHR:
00010Er 2  A9 00        		lda #0
000110r 2  8D 03 20     		sta OAM_ADDR
000113r 2  A9 03        		lda #$03
000115r 2  8D 14 40     		sta OAM_DMA
000118r 2               
000118r 2               @EXIT:
000118r 2  A9 01        		lda #1
00011Ar 2  85 rr        		sta is_processing_main
00011Cr 2  4A           		shr								; A = 0
00011Dr 2  85 rr        		sta bg_buff_pointer
00011Fr 2  E6 rr        		inc frm_cnt
000121r 2  20 rr rr     		jsr _setScroll
000124r 2  68           		pla
000125r 2  40           		rti	; --------------------------
000126r 2               .endproc
