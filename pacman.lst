000174r 2               			)
000174r 2               				.repeat (.right(.tcount({arg2})-1, {arg2}))
000174r 2               					dex
000174r 2               				.endrepeat
000174r 2               			.else
000174r 2               				pha
000174r 2               				txa
000174r 2               				sec
000174r 2               				sbc arg2
000174r 2               				tax
000174r 2               				pla
000174r 2               			.endif
000174r 2               		.elseif (.paramcount = 2 && .match({arg1}, y))
000174r 2               			.if (\
000174r 2               				.match(.left(1, {arg2}), #) &&\
000174r 2               				.right(.tcount({arg2})-1, {arg2}) <= 7\
000174r 2               			)
000174r 2               				.repeat (.right(.tcount ({arg2})-1, {arg2}))
000174r 2               					dey
000174r 2               				.endrepeat
000174r 2               			.else
000174r 2               				pha
000174r 2               				tya
000174r 2               				sec
000174r 2               				sbc arg2
000174r 2               				tay
000174r 2               				pla
