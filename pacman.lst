000170r 2               ; Addition
000170r 2               ; This Macro only supports Immediate/Zeropage/Absolute addressing.
000170r 2               ; Other addressing modes are not optimized for speed.
000170r 2               ; Other addressing usage: add a, {$00, x} / add a, {($00), y}
000170r 2               ; @PARAM	arg1: register or Address
000170r 2               ; @PARAM	arg2
000170r 2               ; ------------------------------------------------------------------------------
000170r 2               
000170r 2               .code									; ----- code -----
000170r 2               
000170r 2               .macro add arg1, arg2
000170r 2               		.if (.paramcount = 1)
000170r 2               			; arg1: val
000170r 2               			; add #3 / add $80
000170r 2               			clc
000170r 2               			adc arg1
000170r 2               		.elseif (.paramcount = 2)
000170r 2               			; arg1: target
000170r 2               			; arg2: val
000170r 2               			.if (.match({arg1}, a))
000170r 2               				; add a, #3 / add a, $80
000170r 2               				clc
000170r 2               				adc arg2
000170r 2               			.elseif (.match({arg1}, x))
000170r 2               				; add x, ??
000170r 2               				.if (\
000170r 2               					.match(.left(1, {arg2}), #) &&\
000170r 2               					.right(.tcount({arg2})-1, {arg2}) <= 7\
000170r 2               				)
000170r 2               					; add x, #0~7
000170r 2               					.repeat (.right(.tcount({arg2})-1, {arg2}))
000170r 2               						inx
000170r 2               					.endrepeat
000170r 2               				.else
000170r 2               					pha
000170r 2               					txa
000170r 2               					clc
000170r 2               					adc arg2
000170r 2               					tax
000170r 2               					pla
000170r 2               				.endif
000170r 2               			.elseif (.match({arg1}, y))
000170r 2               				; add y, ??
000170r 2               				.if (\
000170r 2               					.match(.left(1, {arg2}), #) &&\
000170r 2               					.right(.tcount({arg2})-1, {arg2}) <= 7\
000170r 2               				)
000170r 2               					; add y, #0~7
000170r 2               					.repeat (.right(.tcount ({arg2})-1, {arg2}))
000170r 2               						iny
000170r 2               					.endrepeat
000170r 2               				.else
000170r 2               					pha
000170r 2               					tya
000170r 2               					clc
000170r 2               					adc arg2
000170r 2               					tay
000170r 2               					pla
000170r 2               				.endif
000170r 2               			.endif
000170r 2               		.else
000170r 2               			.error "Args in macro add are wrong."
000170r 2               		.endif
000170r 2               .endmacro
