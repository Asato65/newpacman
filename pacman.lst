000042r 2  A5 rr        		lda ppu_ctrl1_cpy
000044r 2  29 FB        		and #%11111011					; Mask direction flag
000046r 2  05 rr        		ora tmp1						; End using tmp1
000048r 2  85 rr        		sta ppu_ctrl1_cpy
00004Ar 2  8D 00 20     		sta PPU_CTRL1					; Not use restorePPUSet()
00004Dr 2               @SET_ADDR:
00004Dr 2  E8           		inx								; Not do inx when go to @EXIT
00004Er 2  BD 00 01     		lda BG_BUFF, x
000051r 2  8D 06 20     		sta PPU_ADDR
000054r 2  E8           		inx
000055r 2  BD 00 01     		lda BG_BUFF, x
000058r 2  8D 06 20     		sta PPU_ADDR
00005Br 2  E8           		inx
00005Cr 2               @STORE_DATA:
00005Cr 2  BD 00 01     		lda BG_BUFF, x
00005Fr 2  A8           		tay
000060r 2  C9 FE        		cmp #$fe
000062r 2  B0 D8        		bcs @SET_MODE					; no inx
000064r 2  98           		tya
000065r 2  8D 07 20     		sta PPU_DATA
000068r 2  E8           		inx
000069r 2  E4 rr        		cpx bg_buff_pointer
00006Br 2  D0 EF        		bne @STORE_DATA
00006Dr 2               
00006Dr 2               		; @SET_MODE + @SET_ADDR = 51 cycle
00006Dr 2               		; @STORE_DATA (return @STORE_DATA) = 24 cycle
00006Dr 2               		; @STORE_DATA (return @SET_MODE) = 13 cycle
00006Dr 2               
00006Dr 2               		; str1 = "A  B"
00006Dr 2               		; 	=> 51 + space_len * 24 cycle
00006Dr 2               		; 	=> mode(1) + addr(2) + data(2 + space_len) = (5 + space_len) bytes
00006Dr 2               		; 	|  len  || 1  | 2  |  3  |  4  |
00006Dr 2               		; 	| cycle || 75 | 99 | 123 | 147 |
00006Dr 2               		;	| bytes || 6  | 7  |  8  |  9  |
00006Dr 2               		; str2 = 'A', str3 = 'B'
00006Dr 2               		; 	=> (51 + 13) * 2 = 64 * 2 = 128 cycle
00006Dr 2               		; 	=> (mode(1) + addr(2) + data(1)) * 2 = 8 bytes
00006Dr 2               		; space length:
00006Dr 2               		; 	1: 75 cycle,	6 bytes (str1)
00006Dr 2               		; 	2: 99 cycle,	7 bytes
00006Dr 2               		; 	3: 123 cycle,	8 bytes
00006Dr 2               		; 	4~: 128 cycle,	8 bytes (str2)
