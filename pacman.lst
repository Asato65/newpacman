000180r 2               ;*------------------------------------------------------------------------------
000180r 2               ; Arithmetic right shift
000180r 2               ; A >>= c
000180r 2               ; @PARAM	c: default=1
000180r 2               ;
000180r 2               ; To ASR a memory location
000180r 2               ; (From http://wiki.nesdev.com/w/index.php/Synthetic_instructions#Arithmetic_shift_right)
000180r 2               ; 	lda addr		; Copy memory into A
000180r 2               ; 	asl				; Copy sign bit of A into carry (shorter than CMP)
000180r 2               ; 	ror addr
000180r 2               ;*------------------------------------------------------------------------------
000180r 2               
000180r 2               .code									; ----- code -----
000180r 2               
000180r 2               .macro ashr c
000180r 2               		.if (.blank(c))
000180r 2               			; ashr
000180r 2               			cmp #%1000_0000				; Bit7 into carry
000180r 2               			ror							; Shift carry into Bit7
000180r 2               		.elseif (.match(.left(1, {c}), #))
