00023Er 2               		jsr subfunc::_waitVblank					; 1st time
00023Er 2               
00023Er 2               		; It takes about 30,000 cycles for the PPU to stabilize.
00023Er 2               
00023Er 2               		lda #$20
00023Er 2               		sta PPU_ADDR
00023Er 2               		txa								; X = A = 0
