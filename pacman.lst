000170r 2               
000170r 2               .code									; ----- code -----
000170r 2               
000170r 2               .macro shr c
000170r 2               		.if (.blank(c))
000170r 2               			lsr
000170r 2               		.elseif (.match(.left(1, {c}), #))
000170r 2               			.repeat	(.right(.tcount ({c})-1, {c}))
000170r 2               				lsr
000170r 2               			.endrepeat
000170r 2               		.else
