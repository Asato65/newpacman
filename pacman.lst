000170r 2               		.elseif (.paramcount = 2 && .match({arg1}, a))
000170r 2               			sec
000170r 2               			sbc arg2
000170r 2               		.elseif (.paramcount = 2 && .match({arg1}, x))
000170r 2               			.if (\
000170r 2               				.match(.left(1, {arg2}), #) &&\
000170r 2               				.right(.tcount({arg2})-1, {arg2}) <= 7\
000170r 2               			)
000170r 2               				.repeat (.right(.tcount({arg2})-1, {arg2}))
000170r 2               					dex
000170r 2               				.endrepeat
000170r 2               			.else
000170r 2               				pha
000170r 2               				txa
000170r 2               				sec
000170r 2               				sbc arg2
000170r 2               				tax
000170r 2               				pla
000170r 2               			.endif
000170r 2               		.elseif (.paramcount = 2 && .match({arg1}, y))
000170r 2               			.if (\
000170r 2               				.match(.left(1, {arg2}), #) &&\
000170r 2               				.right(.tcount({arg2})-1, {arg2}) <= 7\
000170r 2               			)
000170r 2               				.repeat (.right(.tcount ({arg2})-1, {arg2}))
000170r 2               					dey
000170r 2               				.endrepeat
000170r 2               			.else
000170r 2               				pha
000170r 2               				tya
000170r 2               				sec
000170r 2               				sbc arg2
000170r 2               				tay
000170r 2               				pla
000170r 2               			.endif
000170r 2               		.else
