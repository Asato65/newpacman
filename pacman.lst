000170r 2               ;*------------------------------------------------------------------------------
000170r 2               ; Arithmetic right shift
000170r 2               ; A >>= c
000170r 2               ; @PARAM	c: default=1
000170r 2               ;
000170r 2               ; To ASR a memory location
000170r 2               ; (From http://wiki.nesdev.com/w/index.php/Synthetic_instructions#Arithmetic_shift_right)
000170r 2               ; 	lda addr		; Copy memory into A
000170r 2               ; 	asl				; Copy sign bit of A into carry (shorter than CMP)
000170r 2               ; 	ror addr
000170r 2               ;*------------------------------------------------------------------------------
000170r 2               
000170r 2               .code									; ----- code -----
000170r 2               
000170r 2               .macro ashr c
000170r 2               		.if (.blank(c))
000170r 2               			; ashr
000170r 2               			cmp #%1000_0000				; Bit7 into carry
000170r 2               			ror							; Shift carry into Bit7
000170r 2               		.elseif (.match(.left(1, {c}), #))
000170r 2               			; ashr #4
000170r 2               			.repeat (.right(.tcount ({c})-1, {c}))
000170r 2               				cmp #%1000_0000
000170r 2               				ror
000170r 2               			.endrepeat
000170r 2               		.else
000170r 2               			.error "Arg \"c\" in macro ashr is wrong."
000170r 2               		.endif
000170r 2               .endmacro
