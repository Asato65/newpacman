0000CCr 2               ; Load array
0000CCr 2               ; A = Arr[X][Y]
0000CCr 2               ; @PARAM	ADDR: Array Address
0000CCr 2               ; @PARAM	X Y: index (Access Arr[x][y])
0000CCr 2               ; @BREAK	tmp1
0000CCr 2               ; ------------------------------------------------------------------------------
0000CCr 2               
0000CCr 2               .macro ldarr addr
0000CCr 2               		.if !(.blank(addr))
0000CCr 2               			sty tmp1						; save Y
0000CCr 2               			txa
0000CCr 2               			asl								; ×2（アドレスが16bitなのでARR[x][y]のxが+1 => 読み込むアドレスは+2する必要がある
0000CCr 2               			tay								; アドレッシングに使うためYレジスタへ
0000CCr 2               			lda addr, y						; Low
0000CCr 2               			sta <addr_tmp1
0000CCr 2               			lda addr+1, y					; High
0000CCr 2               			sta >addr_tmp1
0000CCr 2               			ldy tmp1						; restore Y
0000CCr 2               			lda (addr_tmp1), y
0000CCr 2               		.else
0000CCr 2               			.error "Arg addr in macro ldarr is wrong."
0000CCr 2               		.endif
