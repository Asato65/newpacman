00002Br 2               ; ------------------------------------------------------------------------------
00002Br 2               ; Addition
00002Br 2               ; This Macro only supports Immediate/Zeropage/Absolute addressing.
00002Br 2               ; Other addressing modes are not optimized for speed.
00002Br 2               ; Other addressing usage: add a, {$00, x} / add a, {($00), y}
00002Br 2               ; @PARAM	arg1: register or Address
00002Br 2               ; @PARAM	arg2
00002Br 2               ; ------------------------------------------------------------------------------
00002Br 2               
00002Br 2               .macro add arg1, arg2
00002Br 2               		.if (.paramcount = 1)
00002Br 2               			; arg1: val
00002Br 2               			; add #3 / add $80
00002Br 2               			clc
00002Br 2               			adc arg1
00002Br 2               		.elseif (.paramcount = 2)
00002Br 2               			; arg1: target
00002Br 2               			; arg2: val
00002Br 2               			.if (.match({arg1}, a))
00002Br 2               				; add a, #3 / add a, $80
00002Br 2               				clc
00002Br 2               				adc arg2
00002Br 2               			.elseif (.match({arg1}, x))
00002Br 2               				; add x, ??
00002Br 2               				.if (\
00002Br 2               					.match(.left(1, {arg2}), #) &&\
00002Br 2               					.right(.tcount({arg2})-1, {arg2}) <= 7\
00002Br 2               				)
00002Br 2               					; add x, #0~7
00002Br 2               					.repeat (.right(.tcount({arg2})-1, {arg2}))
00002Br 2               						inx
00002Br 2               					.endrepeat
00002Br 2               				.else
00002Br 2               					pha
00002Br 2               					txa
00002Br 2               					clc
00002Br 2               					adc arg2
00002Br 2               					tax
00002Br 2               					pla
00002Br 2               				.endif
00002Br 2               			.elseif (.match({arg1}, y))
00002Br 2               				; add y, ??
00002Br 2               				.if (\
00002Br 2               					.match(.left(1, {arg2}), #) &&\
00002Br 2               					.right(.tcount({arg2})-1, {arg2}) <= 7\
00002Br 2               				)
00002Br 2               					; add y, #0~7
00002Br 2               					.repeat (.right(.tcount ({arg2})-1, {arg2}))
00002Br 2               						iny
00002Br 2               					.endrepeat
00002Br 2               				.else
00002Br 2               					pha
00002Br 2               					tya
00002Br 2               					clc
00002Br 2               					adc arg2
00002Br 2               					tay
00002Br 2               					pla
00002Br 2               				.endif
00002Br 2               			.endif
00002Br 2               		.else
00002Br 2               			.error "Args in macro add are wrong."
00002Br 2               		.endif
00002Br 2               .endmacro
