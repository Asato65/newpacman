00002Br 1               .include "./asm/macro.asm"
00002Br 2               ; ------------------------------------------------------------------------------
00002Br 2               ; Load array
00002Br 2               ; A = Arr[X][Y]
00002Br 2               ; @PARAM	ADDR: Array Address
00002Br 2               ; @PARAM	X Y: index (Access Arr[x][y])
00002Br 2               ; @BREAK	tmp1
00002Br 2               ; ------------------------------------------------------------------------------
00002Br 2               
00002Br 2               .macro ldarr addr
00002Br 2               		.if !(.blank(addr))
00002Br 2               			sty tmp1						; save Y
00002Br 2               			txa
00002Br 2               			asl								; ×2（アドレスが16bitなのでARR[x][y]のxが+1 => 読み込むアドレスは+2する必要がある
00002Br 2               			tay								; アドレッシングに使うためYレジスタへ
00002Br 2               			lda addr, y						; Low
00002Br 2               			sta <addr_tmp1
00002Br 2               			lda addr+1, y					; High
00002Br 2               			sta >addr_tmp1
00002Br 2               			ldy tmp1						; restore Y
00002Br 2               			lda (addr_tmp1), y
00002Br 2               		.else
00002Br 2               			.error "Arg addr in macro ldarr is wrong."
00002Br 2               		.endif
00002Br 2               .endmacro
