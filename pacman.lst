00002Br 2               ;*------------------------------------------------------------------------------
00002Br 2               
00002Br 2               .macro ashl c
00002Br 2               		cmp #%1000_0000
00002Br 2               		php								; Save carry
00002Br 2               		.if (.blank(c))
00002Br 2               			; ashl
00002Br 2               			shl #2
