000170r 2               ; Load array
000170r 2               ; A = Arr[X][Y]
000170r 2               ; @PARAM	ADDR: Array Address
000170r 2               ; @PARAM	X Y: index (Access Arr[x][y])
000170r 2               ; @BREAK	tmp1
000170r 2               ; ------------------------------------------------------------------------------
000170r 2               
000170r 2               .code									; ----- code -----
000170r 2               
000170r 2               .macro ldarr addr
000170r 2               		.if !(.blank(addr))
000170r 2               			sty tmp1						; save Y
000170r 2               			txa
000170r 2               			asl								; ×2（アドレスが16bitなのでARR[x][y]のxが+1 => 読み込むアドレスは+2する必要がある
000170r 2               			tay								; アドレッシングに使うためYレジスタへ
000170r 2               			lda addr, y						; Low
000170r 2               			sta <addr_tmp1
000170r 2               			lda addr+1, y					; High
000170r 2               			sta >addr_tmp1
000170r 2               			ldy tmp1						; restore Y
000170r 2               			lda (addr_tmp1), y
000170r 2               		.else
000170r 2               			.error "Arg addr in macro ldarr is wrong."
000170r 2               		.endif
000170r 2               .endmacro
