000180r 2               			.repeat (.right(.tcount ({c})-1, {c}))
000180r 2               				cmp #%1000_0000
000180r 2               				ror
000180r 2               			.endrepeat
000180r 2               		.else
000180r 2               			.error "Arg \"c\" in macro ashr is wrong."
000180r 2               		.endif
