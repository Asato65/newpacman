00015Er 2               		.if (.paramcount = 1)
00015Er 2               			; arg1: val
00015Er 2               			; add #3 / add $80
00015Er 2               			clc
00015Er 2               			adc arg1
00015Er 2               		.elseif (.paramcount = 2)
00015Er 2               			; arg1: target
00015Er 2               			; arg2: val
00015Er 2               			.if (.match({arg1}, a))
00015Er 2               				; add a, #3 / add a, $80
00015Er 2               				clc
00015Er 2               				adc arg2
00015Er 2               			.elseif (.match({arg1}, x))
00015Er 2               				; add x, ??
00015Er 2               				.if (\
00015Er 2               					.match(.left(1, {arg2}), #) &&\
00015Er 2               					.right(.tcount({arg2})-1, {arg2}) <= 7\
00015Er 2               				)
00015Er 2               					; add x, #0~7
00015Er 2               					.repeat (.right(.tcount({arg2})-1, {arg2}))
00015Er 2               						inx
00015Er 2               					.endrepeat
00015Er 2               				.else
00015Er 2               					pha
00015Er 2               					txa
00015Er 2               					clc
00015Er 2               					adc arg2
00015Er 2               					tax
00015Er 2               					pla
00015Er 2               				.endif
00015Er 2               			.elseif (.match({arg1}, y))
00015Er 2               				; add y, ??
00015Er 2               				.if (\
00015Er 2               					.match(.left(1, {arg2}), #) &&\
00015Er 2               					.right(.tcount({arg2})-1, {arg2}) <= 7\
00015Er 2               				)
00015Er 2               					; add y, #0~7
00015Er 2               					.repeat (.right(.tcount ({arg2})-1, {arg2}))
00015Er 2               						iny
00015Er 2               					.endrepeat
00015Er 2               				.else
00015Er 2               					pha
00015Er 2               					tya
00015Er 2               					clc
00015Er 2               					adc arg2
00015Er 2               					tay
00015Er 2               					pla
00015Er 2               				.endif
00015Er 2               			.endif
00015Er 2               		.else
00015Er 2               			.error "Args in macro add are wrong."
00015Er 2               		.endif
00015Er 2               .endmacro
