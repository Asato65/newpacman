0000CCr 2               ; Addition
0000CCr 2               ; This Macro only supports Immediate/Zeropage/Absolute addressing.
0000CCr 2               ; Other addressing modes are not optimized for speed.
0000CCr 2               ; Other addressing usage: add a, {$00, x} / add a, {($00), y}
0000CCr 2               ; @PARAM	arg1: register or Address
0000CCr 2               ; @PARAM	arg2
0000CCr 2               ; ------------------------------------------------------------------------------
0000CCr 2               
0000CCr 2               .macro add arg1, arg2
0000CCr 2               		.if (.paramcount = 1)
0000CCr 2               			; arg1: val
0000CCr 2               			; add #3 / add $80
0000CCr 2               			clc
0000CCr 2               			adc arg1
0000CCr 2               		.elseif (.paramcount = 2)
0000CCr 2               			; arg1: target
0000CCr 2               			; arg2: val
0000CCr 2               			.if (.match({arg1}, a))
0000CCr 2               				; add a, #3 / add a, $80
0000CCr 2               				clc
0000CCr 2               				adc arg2
0000CCr 2               			.elseif (.match({arg1}, x))
0000CCr 2               				; add x, ??
0000CCr 2               				.if (\
0000CCr 2               					.match(.left(1, {arg2}), #) &&\
0000CCr 2               					.right(.tcount({arg2})-1, {arg2}) <= 7\
0000CCr 2               				)
0000CCr 2               					; add x, #0~7
0000CCr 2               					.repeat (.right(.tcount({arg2})-1, {arg2}))
0000CCr 2               						inx
0000CCr 2               					.endrepeat
0000CCr 2               				.else
0000CCr 2               					pha
0000CCr 2               					txa
0000CCr 2               					clc
0000CCr 2               					adc arg2
0000CCr 2               					tax
0000CCr 2               					pla
0000CCr 2               				.endif
0000CCr 2               			.elseif (.match({arg1}, y))
0000CCr 2               				; add y, ??
0000CCr 2               				.if (\
0000CCr 2               					.match(.left(1, {arg2}), #) &&\
0000CCr 2               					.right(.tcount({arg2})-1, {arg2}) <= 7\
0000CCr 2               				)
0000CCr 2               					; add y, #0~7
0000CCr 2               					.repeat (.right(.tcount ({arg2})-1, {arg2}))
0000CCr 2               						iny
0000CCr 2               					.endrepeat
0000CCr 2               				.else
0000CCr 2               					pha
0000CCr 2               					tya
0000CCr 2               					clc
0000CCr 2               					adc arg2
0000CCr 2               					tay
0000CCr 2               					pla
0000CCr 2               				.endif
0000CCr 2               			.endif
0000CCr 2               		.else
0000CCr 2               			.error "Args in macro add are wrong."
0000CCr 2               		.endif
0000CCr 2               .endmacro
