0001FFr 2               
0001FFr 2               		/*
0001FFr 2               		A & $2002 -> set Z(zero flag)
0001FFr 2               		$2002 bit7(vblank) -> N(negative), bit6(sprite 0 hit) -> V(overflow)
0001FFr 2               		Reset vblank & sprite 0 hit flag
0001FFr 2               		(The state of this flag after reset is undefined.)
0001FFr 2               		*/
0001FFr 2               		bit $2002
0001FFr 2               
0001FFr 2               		jsr subfunc::_waitVblank					; 1st time
0001FFr 2               
0001FFr 2               		; It takes about 30,000 cycles for the PPU to stabilize.
0001FFr 2               
0001FFr 2               		lda #$20
0001FFr 2               		sta PPU_ADDR
0001FFr 2               		txa								; X = A = 0
0001FFr 2               		sta PPU_ADDR
0001FFr 2               @CLR_MEM:
0001FFr 2               		sta $00, x
0001FFr 2               		sta $0100, x
0001FFr 2               		sta $0200, x
0001FFr 2               		sta $0400, x
0001FFr 2               		sta $0500, x
0001FFr 2               		sta $0600, x
0001FFr 2               		sta $0700, x
0001FFr 2               		inx
0001FFr 2               		bne @CLR_MEM
0001FFr 2               
0001FFr 2               		; CLEAR $2000~27ff
0001FFr 2               		ldy #8
0001FFr 2               @CLR_VRAM:
0001FFr 2               		sta PPU_DATA
0001FFr 2               		inx
0001FFr 2               		bne @CLR_VRAM
0001FFr 2               		dey
0001FFr 2               		bne @CLR_VRAM
0001FFr 2               
0001FFr 2               		lda #$ff
0001FFr 2               @CLR_CHR_MEM:
0001FFr 2               		sta $0300, x
0001FFr 2               		inx
0001FFr 2               		bne @CLR_CHR_MEM
0001FFr 2               
0001FFr 2               		; Store initial value
0001FFr 2               		lda #%10010000					; |NMI-ON|PPU=MASTER|SPR8*8|BG$1000|SPR$0000|VRAM+1|SCREEN$2000|
0001FFr 2               		sta ppu_ctrl1_cpy
0001FFr 2               		lda #%00011110					; |R|G|B|DISP-SPR|DISP-BG|SHOW-L8-SPR|SHOW-L8-BG|MODE=COLOR|
0001FFr 2               		sta ppu_ctrl2_cpy
0001FFr 2               
0001FFr 2               		jsr subfunc::_waitVblank					; 2nd time
0001FFr 2               
0001FFr 2               		; Transfar pallete
0001FFr 2               		lda #>PLT_TABLE_ADDR
0001FFr 2               		sta PPU_ADDR
0001FFr 2               		lda #<PLT_TABLE_ADDR			; Addr lo = 00
0001FFr 2               		sta PPU_ADDR
0001FFr 2               		tax
0001FFr 2               @TFR_PAL:
0001FFr 2               		lda DEFAULT_PLT, x
0001FFr 2               		sta PPU_DATA
0001FFr 2               		inx
0001FFr 2               		cpx #$20
0001FFr 2               		bne @TFR_PAL
0001FFr 2               
0001FFr 2               		lda #0
0001FFr 2               		sta OAM_ADDR
0001FFr 2               		lda #$03
0001FFr 2               		sta OAM_DMA
0001FFr 2               
