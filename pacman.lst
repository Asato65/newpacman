000174r 2               ;*------------------------------------------------------------------------------
000174r 2               
000174r 2               .code									; ----- code -----
000174r 2               
000174r 2               .macro shr c
000174r 2               		.if (.blank(c))
000174r 2               			lsr
000174r 2               		.elseif (.match(.left(1, {c}), #))
000174r 2               			.repeat	(.right(.tcount ({c})-1, {c}))
000174r 2               				lsr
000174r 2               			.endrepeat
000174r 2               		.else
000174r 2               			.error "Arg \"c\" in macro shr is wrong."
000174r 2               		.endif
000174r 2               .endmacro
000174r 2               
000174r 2               
000174r 2               ;*------------------------------------------------------------------------------
000174r 2               ; Arithmetic left shift
000174r 2               ;! Deprecated (Not shortened)
000174r 2               ; A >>= c
000174r 2               ; @PARAM	c: default=1
000174r 2               ;*------------------------------------------------------------------------------
000174r 2               
000174r 2               .code									; ----- code -----
000174r 2               
000174r 2               .macro ashl c
000174r 2               		cmp #%1000_0000
000174r 2               		php								; Save carry
000174r 2               		.if (.blank(c))
000174r 2               			; ashl
000174r 2               			shl #2
000174r 2               		.elseif (.match(.left(1, {c}), #))
000174r 2               			; ashl #4
000174r 2               			shl #((.right(.tcount ({c})-1, {c})) + 1)
000174r 2               		.else
000174r 2               			.error "Arg \"c\" in macro ashl is wrong."
000174r 2               		.endif
000174r 2               		plp
000174r 2               		ror								; a /= 2, carry into bit7
000174r 2               .endmacro
000174r 2               
000174r 2               
000174r 2               ;*------------------------------------------------------------------------------
000174r 2               ; Arithmetic right shift
000174r 2               ; A >>= c
000174r 2               ; @PARAM	c: default=1
000174r 2               ;
000174r 2               ; To ASR a memory location
000174r 2               ; (From http://wiki.nesdev.com/w/index.php/Synthetic_instructions#Arithmetic_shift_right)
000174r 2               ; 	lda addr		; Copy memory into A
000174r 2               ; 	asl				; Copy sign bit of A into carry (shorter than CMP)
000174r 2               ; 	ror addr
000174r 2               ;*------------------------------------------------------------------------------
000174r 2               
000174r 2               .code									; ----- code -----
000174r 2               
000174r 2               .macro ashr c
000174r 2               		.if (.blank(c))
000174r 2               			; ashr
000174r 2               			cmp #%1000_0000				; Bit7 into carry
000174r 2               			ror							; Shift carry into Bit7
000174r 2               		.elseif (.match(.left(1, {c}), #))
000174r 2               			; ashr #4
000174r 2               			.repeat (.right(.tcount ({c})-1, {c}))
000174r 2               				cmp #%1000_0000
000174r 2               				ror
000174r 2               			.endrepeat
000174r 2               		.else
000174r 2               			.error "Arg \"c\" in macro ashr is wrong."
000174r 2               		.endif
000174r 2               .endmacro
