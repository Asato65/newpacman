0001A1r 2               
0001A1r 2               @NMI_MAIN:
0001A1r 2               
0001A1r 2  A2 00        	ldx #0
0001A3r 2  86 rr        	stx tmp1
0001A5r 2               @PLT_STORE_LOOP:
0001A5r 2  A5 rr        	lda plt_addr+1
0001A7r 2  8D 06 20     	sta PPU_ADDR
0001AAr 2  A5 rr        	lda plt_addr+0
0001ACr 2  18 69 08     	add #8
0001AFr 2  18 65 rr     	add tmp1
0001B2r 2  8D 06 20     	sta PPU_ADDR
0001B5r 2               
0001B5r 2  BD 34 01     	lda BG_PLT_BUFF, x
0001B8r 2  8D 07 20     	sta PPU_DATA
0001BBr 2  A5 rr        	lda tmp1
0001BDr 2  18 69 08     	add #8
0001C0r 2  85 rr        	sta tmp1
0001C2r 2  E8           	inx
0001C3r 2  E0 07        	cpx #7
0001C5r 2  90 DE        	bcc @PLT_STORE_LOOP
0001C7r 2               
0001C7r 2  A5 rr        		lda ppu_ctrl1_cpy
0001C9r 2  09 04        		ora #%0000_0100					; Vertical mode
0001CBr 2  85 rr        		sta ppu_ctrl1_cpy
0001CDr 2  8D 00 20     		sta PPU_CTRL1					; Not use restorePPUSet()
0001D0r 2               
0001D0r 2               		; line 1
0001D0r 2  A5 rr        		lda bg_map_addr+1				; hi
0001D2r 2  8D 06 20     		sta PPU_ADDR
0001D5r 2  A5 rr        		lda bg_map_addr+0				; lo
0001D7r 2  8D 06 20     		sta PPU_ADDR
0001DAr 2               
0001DAr 2  A2 00        		ldx #0
0001DCr 2               @STORE_MAP_LOOP:
0001DCr 2  BD 00 01     		lda BG_MAP_BUFF, x
0001DFr 2  8D 07 20     		sta PPU_DATA
0001E2r 2  E8           		inx
0001E3r 2  E0 1A        		cpx #$1a
0001E5r 2  D0 F5        		bne @STORE_MAP_LOOP
0001E7r 2               
0001E7r 2               		; line 2
0001E7r 2  A5 rr        		lda bg_map_addr+1				; hi
0001E9r 2  8D 06 20     		sta PPU_ADDR
0001ECr 2  A6 rr        		ldx bg_map_addr+0				; lo (increment)
0001EEr 2  E8           		inx
0001EFr 2  8E 06 20     		stx PPU_ADDR
0001F2r 2               
0001F2r 2  A2 00        		ldx #0
0001F4r 2               @STORE_MAP_LOOP2:
0001F4r 2  BD 1A 01     		lda BG_MAP_BUFF+$1a, x
0001F7r 2  8D 07 20     		sta PPU_DATA
0001FAr 2  E8           		inx
0001FBr 2  E0 1A        		cpx #$1a
0001FDr 2  D0 F5        		bne @STORE_MAP_LOOP2
0001FFr 2               
0001FFr 2  A9 00        		lda #0
000201r 2  C5 rr        		cmp bg_buff_pointer
000203r 2  F0 35        		beq @STORE_CHR
000205r 2  AA           		tax
000206r 2  BD 49 01     		lda BG_BUFF, x
000209r 2               @SET_MODE:
000209r 2  29 01        		and #%00000001					; Get flag
00020Br 2  0A 0A        		shl #2							; Move flag to Bit2
00020Dr 2  85 rr        		sta tmp1						; Start using tmp1
00020Fr 2  A5 rr        		lda ppu_ctrl1_cpy
000211r 2  29 FB        		and #%11111011					; Mask direction flag
000213r 2  05 rr        		ora tmp1						; End using tmp1
000215r 2  85 rr        		sta ppu_ctrl1_cpy
000217r 2  8D 00 20     		sta PPU_CTRL1					; Not use restorePPUSet()
00021Ar 2               @SET_ADDR:
00021Ar 2  E8           		inx								; Not do inx when go to @EXIT
00021Br 2  BD 49 01     		lda BG_BUFF, x
00021Er 2  8D 06 20     		sta PPU_ADDR
000221r 2  E8           		inx
000222r 2  BD 49 01     		lda BG_BUFF, x
000225r 2  8D 06 20     		sta PPU_ADDR
000228r 2  E8           		inx
000229r 2               @STORE_DATA:
000229r 2  BD 49 01     		lda BG_BUFF, x
00022Cr 2  A8           		tay
00022Dr 2  C9 FE        		cmp #$fe
00022Fr 2  B0 D8        		bcs @SET_MODE					; no inx
000231r 2  98           		tya
000232r 2  8D 07 20     		sta PPU_DATA
000235r 2  E8           		inx
000236r 2  E4 rr        		cpx bg_buff_pointer
000238r 2  D0 EF        		bne @STORE_DATA
00023Ar 2               
00023Ar 2               		; @SET_MODE + @SET_ADDR = 51 cycle
00023Ar 2               		; @STORE_DATA (return @STORE_DATA) = 24 cycle
00023Ar 2               		; @STORE_DATA (return @SET_MODE) = 13 cycle
00023Ar 2               
00023Ar 2               		; str1 = "A  B"
00023Ar 2               		; 	=> 51 + space_len * 24 cycle
00023Ar 2               		; 	=> mode(1) + addr(2) + data(2 + space_len) = (5 + space_len) bytes
