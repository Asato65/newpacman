0001AAr 2               
0001AAr 2               ; memo
0001AAr 2               ; ----- PPU buff data structure -----
0001AAr 2               ; r: Direction
0001AAr 2               ; 	Bit0 is a flag, others are 1.
0001AAr 2               ; 	-> 0b1111_111[0/1]
0001AAr 2               ; 	-> 0xFE（Horizontal）/0xFF（Vertical）
0001AAr 2               ; a: Addr
0001AAr 2               ; d: Data
0001AAr 2               ; r [a a] [d d d ... d] r [a a] [d d ... d]
0001AAr 2               
0001AAr 2               
0001AAr 2               ;*------------------------------------------------------------------------------
0001AAr 2               ; NMI (Interrupt)
0001AAr 2               ; @BREAK X Y (When end main process.)
0001AAr 2               ; To shorten the clock, put the buffer data on the stack
0001AAr 2               ; 	(Shorten clock by buff data length)
0001AAr 2               ; 	pla -> 3 clc
0001AAr 2               ; 	lda ZP/ABSORUTE, x -> 4 clc
0001AAr 2               ;*------------------------------------------------------------------------------
0001AAr 2               
0001AAr 2               .code									; ----- code -----
0001AAr 2               
0001AAr 2               .proc _nmi
0001AAr 2  48           		pha								; If main processing has not finished, tmp_rgstA may be in use
0001ABr 2  E6 rr        		inc nmi_cnt
0001ADr 2  A5 rr        		lda is_processing_main
0001AFr 2  F0 02        		beq @NMI_MAIN
0001B1r 2  68           		pla
0001B2r 2  40           		rti	; --------------------------
0001B3r 2               
0001B3r 2               @NMI_MAIN:
0001B3r 2  A5 rr        		lda ppu_ctrl1_cpy
0001B5r 2  09 04        		ora #%0000_0100					; Vertical mode
0001B7r 2  85 rr        		sta ppu_ctrl1_cpy
0001B9r 2  8D 00 20     		sta PPU_CTRL1					; Not use restorePPUSet()
0001BCr 2               
0001BCr 2               		; line 1
0001BCr 2  A5 rr        		lda bg_map_addr+1				; hi
0001BEr 2  8D 06 20     		sta PPU_ADDR
0001C1r 2  A5 rr        		lda bg_map_addr+0				; lo
0001C3r 2  8D 06 20     		sta PPU_ADDR
0001C6r 2               
0001C6r 2  A2 00        		ldx #0
0001C8r 2               @STORE_MAP_LOOP:
0001C8r 2  BD 00 01     		lda BG_MAP_BUFF, x
0001CBr 2  8D 07 20     		sta PPU_DATA
0001CEr 2  E8           		inx
0001CFr 2  E0 1C        		cpx #$1c
0001D1r 2  D0 F5        		bne @STORE_MAP_LOOP
0001D3r 2               
0001D3r 2               		; line 2
0001D3r 2  A5 rr        		lda bg_map_addr+1				; hi
0001D5r 2  8D 06 20     		sta PPU_ADDR
0001D8r 2  A6 rr        		ldx bg_map_addr+0				; lo (increment)
0001DAr 2  E8           		inx
0001DBr 2  8E 06 20     		stx PPU_ADDR
0001DEr 2               
0001DEr 2  A2 00        		ldx #0
0001E0r 2               @STORE_MAP_LOOP2:
0001E0r 2  BD 1C 01     		lda BG_MAP_BUFF+$1c, x
0001E3r 2  8D 07 20     		sta PPU_DATA
0001E6r 2  E8           		inx
0001E7r 2  E0 1C        		cpx #$1c
0001E9r 2  D0 F5        		bne @STORE_MAP_LOOP2
0001EBr 2               
0001EBr 2  A9 00        		lda #0
0001EDr 2  C5 rr        		cmp bg_buff_pointer
0001EFr 2  F0 35        		beq @STORE_CHR
0001F1r 2  AA           		tax
0001F2r 2  BD 38 01     		lda BG_BUFF, x
0001F5r 2               @SET_MODE:
0001F5r 2  29 01        		and #%00000001					; Get flag
0001F7r 2  0A 0A        		shl #2							; Move flag to Bit2
0001F9r 2  85 rr        		sta tmp1						; Start using tmp1
0001FBr 2  A5 rr        		lda ppu_ctrl1_cpy
0001FDr 2  29 FB        		and #%11111011					; Mask direction flag
0001FFr 2  05 rr        		ora tmp1						; End using tmp1
000201r 2  85 rr        		sta ppu_ctrl1_cpy
000203r 2  8D 00 20     		sta PPU_CTRL1					; Not use restorePPUSet()
000206r 2               @SET_ADDR:
000206r 2  E8           		inx								; Not do inx when go to @EXIT
000207r 2  BD 38 01     		lda BG_BUFF, x
00020Ar 2  8D 06 20     		sta PPU_ADDR
00020Dr 2  E8           		inx
00020Er 2  BD 38 01     		lda BG_BUFF, x
000211r 2  8D 06 20     		sta PPU_ADDR
000214r 2  E8           		inx
000215r 2               @STORE_DATA:
000215r 2  BD 38 01     		lda BG_BUFF, x
000218r 2  A8           		tay
000219r 2  C9 FE        		cmp #$fe
00021Br 2  B0 D8        		bcs @SET_MODE					; no inx
00021Dr 2  98           		tya
00021Er 2  8D 07 20     		sta PPU_DATA
000221r 2  E8           		inx
000222r 2  E4 rr        		cpx bg_buff_pointer
000224r 2  D0 EF        		bne @STORE_DATA
000226r 2               
000226r 2               		; @SET_MODE + @SET_ADDR = 51 cycle
000226r 2               		; @STORE_DATA (return @STORE_DATA) = 24 cycle
000226r 2               		; @STORE_DATA (return @SET_MODE) = 13 cycle
000226r 2               
000226r 2               		; str1 = "A  B"
000226r 2               		; 	=> 51 + space_len * 24 cycle
000226r 2               		; 	=> mode(1) + addr(2) + data(2 + space_len) = (5 + space_len) bytes
000226r 2               		; 	|  len  || 1  | 2  |  3  |  4  |
000226r 2               		; 	| cycle || 75 | 99 | 123 | 147 |
000226r 2               		;	| bytes || 6  | 7  |  8  |  9  |
000226r 2               		; str2 = 'A', str3 = 'B'
000226r 2               		; 	=> (51 + 13) * 2 = 64 * 2 = 128 cycle
000226r 2               		; 	=> (mode(1) + addr(2) + data(1)) * 2 = 8 bytes
000226r 2               		; space length:
000226r 2               		; 	1: 75 cycle,	6 bytes (str1)
000226r 2               		; 	2: 99 cycle,	7 bytes
000226r 2               		; 	3: 123 cycle,	8 bytes
000226r 2               		; 	4~: 128 cycle,	8 bytes (str2)
000226r 2               @STORE_CHR:
000226r 2  A9 00        		lda #0
000228r 2  8D 03 20     		sta OAM_ADDR
00022Br 2  A9 03        		lda #$03
00022Dr 2  8D 14 40     		sta OAM_DMA
000230r 2               
000230r 2               @EXIT:
000230r 2  A9 01        		lda #1
000232r 2  85 rr        		sta is_processing_main
000234r 2  4A           		shr
000235r 2  85 rr        		sta bg_buff_pointer				; A = 0
000237r 2  E6 rr        		inc frm_cnt
000239r 2  20 rr rr     		jsr subfunc::_setScroll
00023Cr 2  68           		pla
00023Dr 2  40           		rti	; --------------------------
00023Er 2               .endproc
