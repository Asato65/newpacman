000020r 2               					tax
000020r 2               					pla
000020r 2               				.endif
000020r 2               			.elseif (.match({arg1}, y))
000020r 2               				; add y, ??
000020r 2               				.if (\
000020r 2               					.match(.left(1, {arg2}), #) &&\
000020r 2               					.right(.tcount({arg2})-1, {arg2}) <= 7\
000020r 2               				)
000020r 2               					; add y, #0~7
000020r 2               					.repeat (.right(.tcount ({arg2})-1, {arg2}))
000020r 2               						iny
000020r 2               					.endrepeat
000020r 2               				.else
