0001A5r 2               .endmacro
0001A5r 2               
0001A5r 2               ; memo
0001A5r 2               ; ----- PPU buff data structure -----
0001A5r 2               ; r: Direction
0001A5r 2               ; 	Bit0 is a flag, others are 1.
0001A5r 2               ; 	-> 0b1111_111[0/1]
0001A5r 2               ; 	-> 0xFE（Horizontal）/0xFF（Vertical）
0001A5r 2               ; a: Addr
0001A5r 2               ; d: Data
0001A5r 2               ; r [a a] [d d d ... d] r [a a] [d d ... d]
0001A5r 2               
0001A5r 2               
0001A5r 2               ;*------------------------------------------------------------------------------
0001A5r 2               ; NMI (Interrupt)
0001A5r 2               ; @BREAK X Y (When end main process.)
0001A5r 2               ; To shorten the clock, put the buffer data on the stack
0001A5r 2               ; 	(Shorten clock by buff data length)
0001A5r 2               ; 	pla -> 3 clc
0001A5r 2               ; 	lda ZP/ABSORUTE, x -> 4 clc
0001A5r 2               ;*------------------------------------------------------------------------------
0001A5r 2               
0001A5r 2               .code									; ----- code -----
0001A5r 2               
0001A5r 2               .proc _nmi
0001A5r 2  48           		pha								; If main processing has not finished, tmp_rgstA may be in use
0001A6r 2  E6 rr        		inc nmi_cnt
0001A8r 2  A5 rr        		lda is_processing_main
0001AAr 2  F0 02        		beq @NMI_MAIN
0001ACr 2  68           		pla
0001ADr 2  40           		rti	; --------------------------
0001AEr 2               
0001AEr 2               @NMI_MAIN:
0001AEr 2  C5 rr        		cmp bg_buff_pointer				; A = 0
0001B0r 2  F0 35        		beq @STORE_CHR
0001B2r 2  AA           		tax
0001B3r 2  BD 00 01     		lda BG_BUFF, x
0001B6r 2               @SET_MODE:
0001B6r 2  29 01        		and #%00000001					; Get flag
0001B8r 2  0A 0A        		shl #2							; Move flag to Bit2
0001BAr 2  85 rr        		sta tmp1						; Start using tmp1
0001BCr 2  A5 rr        		lda ppu_ctrl1_cpy
0001BEr 2  29 FB        		and #%11111011					; Mask direction flag
0001C0r 2  05 rr        		ora tmp1						; End using tmp1
0001C2r 2  85 rr        		sta ppu_ctrl1_cpy
0001C4r 2  8D 00 20     		sta PPU_CTRL1					; Not use restorePPUSet()
0001C7r 2               @SET_ADDR:
0001C7r 2  E8           		inx								; Not do inx when go to @EXIT
0001C8r 2  BD 00 01     		lda BG_BUFF, x
0001CBr 2  8D 06 20     		sta PPU_ADDR
0001CEr 2  E8           		inx
0001CFr 2  BD 00 01     		lda BG_BUFF, x
0001D2r 2  8D 06 20     		sta PPU_ADDR
0001D5r 2  E8           		inx
0001D6r 2               @STORE_DATA:
0001D6r 2  BD 00 01     		lda BG_BUFF, x
0001D9r 2  A8           		tay
0001DAr 2  C9 FE        		cmp #$fe
0001DCr 2  B0 D8        		bcs @SET_MODE					; no inx
0001DEr 2  98           		tya
0001DFr 2  8D 07 20     		sta PPU_DATA
0001E2r 2  E8           		inx
0001E3r 2  E4 rr        		cpx bg_buff_pointer
0001E5r 2  D0 EF        		bne @STORE_DATA
0001E7r 2               
0001E7r 2               		; @SET_MODE + @SET_ADDR = 51 cycle
0001E7r 2               		; @STORE_DATA (return @STORE_DATA) = 24 cycle
0001E7r 2               		; @STORE_DATA (return @SET_MODE) = 13 cycle
0001E7r 2               
0001E7r 2               		; str1 = "A  B"
0001E7r 2               		; 	=> 51 + space_len * 24 cycle
0001E7r 2               		; 	=> mode(1) + addr(2) + data(2 + space_len) = (5 + space_len) bytes
0001E7r 2               		; 	|  len  || 1  | 2  |  3  |  4  |
0001E7r 2               		; 	| cycle || 75 | 99 | 123 | 147 |
0001E7r 2               		;	| bytes || 6  | 7  |  8  |  9  |
0001E7r 2               		; str2 = 'A', str3 = 'B'
0001E7r 2               		; 	=> (51 + 13) * 2 = 64 * 2 = 128 cycle
0001E7r 2               		; 	=> (mode(1) + addr(2) + data(1)) * 2 = 8 bytes
0001E7r 2               		; space length:
0001E7r 2               		; 	1: 75 cycle,	6 bytes (str1)
0001E7r 2               		; 	2: 99 cycle,	7 bytes
0001E7r 2               		; 	3: 123 cycle,	8 bytes
0001E7r 2               		; 	4~: 128 cycle,	8 bytes (str2)
0001E7r 2               @STORE_CHR:
0001E7r 2  A9 00        		lda #0
0001E9r 2  8D 03 20     		sta OAM_ADDR
0001ECr 2  A9 03        		lda #$03
0001EEr 2  8D 14 40     		sta OAM_DMA
0001F1r 2               
0001F1r 2               @EXIT:
0001F1r 2  A9 01        		lda #1
0001F3r 2  85 rr        		sta is_processing_main
0001F5r 2  4A           		shr								; A = 0
0001F6r 2  85 rr        		sta bg_buff_pointer
0001F8r 2  E6 rr        		inc frm_cnt
0001FAr 2  20 rr rr     		jsr subfunc::_setScroll
0001FDr 2  68           		pla
0001FEr 2  40           		rti	; --------------------------
0001FFr 2               .endproc
